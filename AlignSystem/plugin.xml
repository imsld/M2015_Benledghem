<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         id="application"
         point="org.eclipse.core.runtime.applications">
      <application>
         <run
               class="org.pfe.mapping.interfaces.Acceuil">
         </run>
      </application>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            name="Perspective"
            class="org.pfe.mapping.interfaces.Perspective"
            id="AlignSystem.perspective">
      </perspective>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <view
            class="org.pfe.mapping.interfaces.views.ViewOntoRepositories"
            id="org.pfe.mapping.interafces.views.ViewOntoRepositories"
            name="Explorateur d&apos;entrepôt">
      </view>
      <view
            class="org.pfe.mapping.interfaces.views.ViewAlignement"
            id="org.pfe.mapping.interafces.views.ViewAlignement"
            name="Alignement">
      </view>
      <view
            class="org.pfe.mapping.interfaces.views.ViewOntoProperties"
            id="org.pfe.mapping.interafces.views.ViewOntoProperties"
            name="Propriétés de l&apos;ontologie">
      </view>
      <view
            class="org.pfe.mapping.interfaces.views.ViewAlignementResult"
            id="org.pfe.mapping.interafces.views.ViewAlignementResult"
            name="Résultat d&apos;alignement">
      </view>
      <view
            class="org.pfe.mapping.interfaces.views.ViewParameters"
            id="org.pfe.mapping.interfaces.views.ViewParameters"
            name="Paramètres">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="*">
         <view
               closeable="false"
               id="org.pfe.mapping.interafces.views.ViewOntoRepositories"
               minimized="false"
               ratio="0.2"
               relationship="left"
               relative="org.eclipse.ui.editorss"
               standalone="true"
               visible="true">
         </view>
         <view
               closeable="false"
               id="org.pfe.mapping.interafces.views.ViewAlignement"
               minimized="false"
               ratio="0.6"
               relationship="top"
               relative="org.eclipse.ui.editorss"
               standalone="true"
               visible="true">
         </view>
         <view
               closeable="false"
               id="org.pfe.mapping.interafces.views.ViewOntoProperties"
               minimized="false"
               ratio="0.2"
               relationship="bottom"
               relative="org.eclipse.ui.editorss"
               standalone="true"
               visible="true">
         </view>
         <view
               closeable="false"
               id="org.pfe.mapping.interafces.views.ViewAlignementResult"
               minimized="false"
               relationship="stack"
               relative="org.pfe.mapping.interafces.views.ViewOntoProperties"
               standalone="true"
               visible="true">
         </view>
      </perspectiveExtension>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="menu:org.eclipse.ui.main.menu">
         <menu
               label="File">
            <command
                  commandId="org.eclipse.ui.file.exit"
                  label="Exit">
            </command>
         </menu>
      </menuContribution>
   </extension>

</plugin>
